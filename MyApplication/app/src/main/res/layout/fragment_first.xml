<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_dolar_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/title_app"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="285dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_dolar_change"
        app:srcCompat="@drawable/mercado" />

    <TextView
        android:id="@+id/textView_value_dolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Valor del Divisa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/input_dolar_value"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Valor"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/textView_value_dolar"
        app:layout_constraintStart_toStartOf="@+id/textView_value_dolar"
        app:layout_constraintTop_toBottomOf="@+id/textView_value_dolar" />

    <TextView
        android:id="@+id/textView_value_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cantidad de Moneda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_dolar_value" />

    <EditText
        android:id="@+id/input_account"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/textView_value_account"
        app:layout_constraintStart_toStartOf="@+id/textView_value_account"
        app:layout_constraintTop_toBottomOf="@+id/textView_value_account" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/input_account"
        app:layout_constraintStart_toStartOf="@+id/input_account"
        app:layout_constraintTop_toBottomOf="@+id/input_account" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/button"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>